<h1>Students List</h1>
<% if current_user %>
  <% if current_user.role == "Student" %>
  <% elsif current_user.role == "Employer" %>
  <% else %>
  <button type="button" class="btn btn-primary"> 
    <%= link_to 'Add Student', new_student_path %>
  </button>
  <% end %>
<% end %>
<table id="students_list">
  <th>Name</th>
  <th>Industry</th>
  <th>Location</th>
  <% @students.sort.each do |s| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
        <%= link_to s.name, student_path(s.id) %> <br>
        </td>
        <td><%= s.preferred_industry %>
        </td>
        <td><%= s.preferred_location %>
        </td>
      </tr>
  <% end%>
  
</table>

<br />

<button type="button" class="btn btn-primary"> 
  <%= link_to 'Add Student', new_student_path %>
</button>
