<fieldset class="interview_appt">
  
  <%= ia.label "Date & Time" %>
  <%= ia.datetime_select :date_time, {:start_year => Time.now.year, :end_year => Time.now.year+2, ampm: true}, {:class => 'date_time_select'} %> 

  <%= ia.label :purpose %>
  <%= ia.select(:purpose, ["Cultural", "Technical", "Programming", "Other"]) %>

  <%= ia.label :location %>
  <%= ia.text_field :location%>

  <%= ia.label :interviewer %>
  <%= ia.text_field :interviewer %>

  <%= ia.label :comments %>
  <%= ia.text_field :comments %>

  <%= ia.label :follow_up %>
  <%= ia.text_field :follow_up %><br />

  <%= ia.hidden_field :_destroy %>
  <%= link_to "Remove Appt", '#', class: "remove_appts" %><br>

</fieldset>